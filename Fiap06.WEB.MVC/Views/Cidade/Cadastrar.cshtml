@model Fiap06.Web.MVC.Models.Cidade

@{
    ViewBag.Title = "Cadastrar";
}

<h2>Cadastro de Cidade</h2>

@if (TempData["msg"] != null)
{
    <div class="alert alert-success">@TempData["msg"]</div>
}

@using (@Html.BeginForm())
{
    <div class="form-group">
        @Html.LabelFor(c => c.Nome)
        @Html.TextBoxFor(c => c.Nome, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(c => c.DataFundacao)
        @Html.TextBoxFor(c => c.DataFundacao, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(c => c.Estado)
        @Html.DropDownListFor(c => c.EstadoId,
            ViewBag.estados as SelectList,
            "Selecione", new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(c => c.Regiao)
        @Html.EnumDropDownListFor(c => c.Regiao,
            "Selecione", new { @class = "form-control" })
    </div>
    <input type="submit" value="Cadastrar" class="btn btn-primary" />
}

