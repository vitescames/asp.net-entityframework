@model Fiap06.Web.MVC.Models.Estado

@{
    ViewBag.Title = "Cadastrar";
}

<h2>Cadastro de Estado</h2>

@if (TempData["msg"] != null)
{
    <div class="alert alert-success">
        @TempData["msg"]
    </div>
}

@using (Html.BeginForm())
{
    <div class="form-group">
        @Html.LabelFor(e => e.Nome)
        @Html.TextBoxFor(e => e.Nome, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(e => e.Sigla)
        @Html.TextBoxFor(e => e.Sigla, new { @class = "form-control"})
    </div>
    <div class="form-group">
        @Html.LabelFor(e => e.Populacao)
        @Html.TextBoxFor(e => e.Populacao, new { @class = "form-control"})
    </div>
    <input type="submit" value="Cadastrar" class="btn btn-primary" />
}

